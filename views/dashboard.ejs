<!DOCTYPE html>
<html>
<head><link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"></head>
<body class="container mt-5">
<h3>Welcome <%= user.name %></h3>
<a href="/apply" class="btn btn-success mb-3">New Application</a>
<a href="/logout" class="btn btn-danger mb-3">Logout</a>
<table class="table table-bordered">
<tr><th>ID</th><th>Name</th><th>Action</th></tr>
<% apps.forEach(a=>{ %>
<tr>
<td><%= a.application_id %></td>
<td><%= a.full_name %></td>
<td>
<a href="/view/<%= a.application_id %>" class="btn btn-sm btn-primary">View</a>
<a href="/download/<%= a.application_id %>" class="btn btn-sm btn-secondary">Download</a>
</td>
</tr>
<% }) %>
</table>
</body>
</html>
